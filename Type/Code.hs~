module Types.Code (Code(..)) where

import Nova.Types.Prim
import Nova.Types.Locals

data Code = Array      [String] [Code]
          | Callop     String Code
          | Catch      String
          | Defspecial String Code
          | From       String String
          | Let        Locals Code
          | Name       String
          | CallPat    [Code]
          | Primitive  Prim Integer
          | The        [String] Code
          | Throw      String Code
          | Tuple      [Code]
          deriving (Eq, Ord, Read, Show)
