readint (String s, Int i) the (Int,Int) = rec (sum = 0, i = i)
  c = s.i
  if digit c
    rec (sum * 10 + safe (undigit c), i + 1)
    else (sum, i)

readint ({Char} seq) the Int = rec (sum = 0, i = seq.start)
  if
   i == seq.end     -> sum
   digit c# seq.i -> rec (sum * 10 + safe (undigit c), i + 1)
    else sum
