readint (String s, Int* i) the Int = rec (sum' = 0, n = *i)
  c = s.n
  if digit c
    rec (sum' * 10 + safe (undigit c), n + 1)
    else *i := n >> sum'

readint ({Char} seq) the Int = rec (sum = 0, i = seq.start)
  if
   i == seq.end     -> sum
   digit c# seq.i -> rec (sum * 10 + safe (undigit c), i + 1)
    else sum
